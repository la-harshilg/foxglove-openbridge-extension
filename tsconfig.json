{
  "extends": "create-foxglove-extension/tsconfig/tsconfig.json",

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["dom"],

    // Disable unnecessary .d.ts emission
    "composite": false,
    "declaration": false,

    // Strict type checks for your own code
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    // ES / JSX options
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Required for Lit / OpenBridge Web Components
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    // Ignore type errors in libraries
    "skipLibCheck": true,

    // Optional: allow importing TS files with extension if needed
    "allowImportingTsExtensions": false
  },

  // Only include your source code
   "include": ["src/**/*.ts", "src/**/*.tsx"],

  // Explicitly exclude node_modules and any generated dist files
  "exclude": ["node_modules", "dist"]
}
